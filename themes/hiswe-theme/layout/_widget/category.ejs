<% if (site.categories.length){ %>
<div class="category-and-tag category-and-tag--category">
  <h3 class="category-and-tag__title"><%- partial('_icon', {name: `folder`}) %> <%= __('categories') %></h3>
  <ul class="category-and-tag__entry">
  <% site.categories.sort('name').each(function(item){ %>
    <li><a href="<%- config.root %><%- item.path %>"><%= item.name %></a><small><%= item.posts.length %></small></li>
  <% }); %>
  </ul>
</div>
<% } %>
