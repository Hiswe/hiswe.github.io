<div class="header__title">
  <h1><a href="<%- config.root %>"><%= config.title %></a></h1>
  <% if (config.subtitle){ %><h2><a href="<%- config.root %>"><%= config.subtitle %></a></h2><% } %>
</div>
<nav class="main-nav">
  <ul class="main-nav__list">
    <% for (var i in theme.menu){ %>
      <li class="main-nav__item"><a href="<%- config.root %><%- theme.menu[i] %>"><%= i %></a></li>
    <% } %>
    <li class="main-nav__item">
      <form class="search" action="//google.com/search" method="get" accept-charset="utf-8">
        <input type="search" name="q" results="0" placeholder="<%= __('search') %>">
        <input type="hidden" name="q" value="site:<%- config.url.replace(/^https?:\/\//, '') %>">
      </form>
    </li>
  </ul>
</nav>
