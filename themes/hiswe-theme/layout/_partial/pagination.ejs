<nav class="pagination">
  <% if (page.prev){ %>
    <a href="<%- config.root %><%- page.prev_link %>" class="pagination__item pagination__item--prev"><%= __('prev') %></a>
  <% } %>
  <% if (page.next){ %>
    <a href="<%- config.root %><%- page.next_link %>" class="pagination__item pagination__item--next"><%= __('next') %></a>
  <% } %>
</nav>
