<% page.posts.each( item => { %>
  <%
    const isDraft = !item.published
    const articleDraftCLass = isDraft ? `article--draft` : ``
  %>
  <article class="article article--short <%= articleDraftCLass %>">
    <%- partial( `_partial/post/title`, {item, index: true} ) %>
    <div class="article__content">
      <% if (item.excerpt){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <% if (item.excerpt){ %>
      <footer class="article__footer">
        <div class="article__footer-item">
          <a href="<%- config.root %><%- item.path %>#more" class="more-link">
            <%- partial(`_icon`, {name: `chevron-right`}) %> <%= theme.excerpt_link %>
          </a>
        </div>
      </footer>
    <% } %>
  </article>
<% }); %>

<%- partial('_partial/pagination') %>


