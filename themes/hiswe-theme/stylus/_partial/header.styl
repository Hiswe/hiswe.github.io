#header {
  text-shadow: 0 0 1px #fff;
  margin: 0;
  padding: 1em $gutter;
  text-align: center;

  @media $mq-medium {
    display: flex;
    height: 100px;
    justify-content: space-between;
    align-items: center;
  }

  @media $mq-big {
    padding: 0;
  }

  a {
    color: var(--c-primary);

    &:hover {
      color: var(--c-contrast);
      text-decoration: none;
    }
  }

  h1 {
    font-size: 2.5em;
    line-height: 1;
    margin: 0;
    text-transform: uppercase;
  }

  h2 {
    font-weight: normal;
    font-size: 0.9em;
    line-height: 1;
    margin-top: 10px;
  }
}

#main-nav {
  font-family: font-title;
  line-height: 2.5em;

  ul {
    list-style: none
    padding: 0;
    margin: 0;
  }

  li {
    display: inline-block;

    + li {
      margin-left: 30px;
    }
  }
}
