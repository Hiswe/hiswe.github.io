#header {
  text-shadow: 0 0 1px #fff;
  margin: 0;
  padding: 1em 0;

  a {
    color: #999;
    &:hover {
      color: color-link;
      text-decoration: none;
    }
  }

  h1 {
    font-size: 2.5em;
    line-height: 1;
    margin: 0;
    text-transform: uppercase;
  }

  h2 {
    font-weight: normal;
    font-size: 0.9em;
    line-height: 1;
    margin-top: 10px;
  }
}

#main-nav {
  font-family: font-title;
  line-height: 2.5em;

  ul {
    list-style: none
  }

  li {
    float: left;
    margin-left: 30px;
  }
}
